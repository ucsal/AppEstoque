<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/GridLayout_homeLayoutcampoProduto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:background="@xml/rounded"
    android:textAlignment="textStart">

    <ImageView
        android:id="@+id/imageView_homeLayoutImagemProduto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView_listaLayoutNomeProduto"
        android:layout_width="171dp"
        android:layout_height="55dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="10dp"
        android:text="Produto"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView_listaLayoutQiuantidadeProduto"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:text="Produto"
        android:textAlignment="center"
        android:textColor="#000000" />

</com.google.android.material.circularreveal.CircularRevealGridLayout>